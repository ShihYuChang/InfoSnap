{
  "manifest_version": 3,
  "name": "InfoSnap",
  "description": "Access To Your Daily Info At Once",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo.png"
  },
  "permissions": ["contextMenus", "storage", "notifications"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
